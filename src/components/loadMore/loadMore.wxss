/* loadMore.wxss */
.bottom{
font-size:26rpx;
color:#999999;
text-align:center;
height:102rpx;
background:#eee;
display:flex;
justify-content:center;
align-items:center;
}
.bottom text.line{
height:1rpx;
width:40rpx;
background:#cccccc;
margin:0 20rpx;
}


view.loading{
width:750rpx;
height:80rpx;
background:#eee;
text-align:center;
z-index:500;
} 
.loading .loading-line{
  display:inline-block;
  width:6rpx;
  height:6rpx;
  background:#e5e5e5;
  border-radius:3rpx;
  margin:0 5rpx;
  animation:loadingAnim 1.6s infinite;
}
.loading .loading-line:nth-child(2){
  animation-delay:.4s;
}
.loading .loading-line:nth-child(3){
  animation-delay:.8s;
}
@keyframes loadingAnim {
  0%{background-color:#b7b7b7}
  50%{background-color:#efefef}
  100%{background-color:#fff}
}